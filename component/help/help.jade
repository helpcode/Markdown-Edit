extends ../layout

block content
    link(rel='stylesheet', href='#{helpcss}')
    script(src='/index/index.js', type='text/javascript')
    script(type='text/javascript').
        //实例化键盘监听
        let methods = new KeyClick();
        //初始化页面快捷键和高度监听事件
        methods.control()

    .container
        h1.problem-title #{problemtitle}

    .problem
        h3.problem-h3-title #{BaseUse.itemtitle}
        p.problem-text #{BaseUse.itemtdec}
        ul.problem-text
            - var menu  = BaseUse.listitem
            - for(var i=0; i< menu.length; i++){
                li
                    p #{menu[i].Key}：#{menu[i].Value}
            - }

        h3.problem-h3-title #{SaveNote.itemtitle}
        p.problem-text #{SaveNote.itemtdec}

        h3.problem-h3-title #{HelpMe.itemtitle}
        div
            p.problem-text #{HelpMe.itemtdec}
            img( class="problem-text" width="120" height="120" src="#{HelpMe.itemimg}")